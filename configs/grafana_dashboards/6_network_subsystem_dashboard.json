{
  "dashboard": {
    "title": "Network Coordinator Details",
    "description": "Network connectivity, bandwidth, and DNS caching performance",
    "tags": ["gaia", "network", "subsystem"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "gaia_network_active_connections"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "gauge",
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      {
        "title": "DNS Cache Hit Rate",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "(gaia_network_dns_cache_hits_total / (gaia_network_dns_cache_hits_total + gaia_network_dns_cache_misses_total + 1)) * 100"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "gauge",
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "green", "value": 80}
            ]
          }
        }
      },
      {
        "title": "Bytes Transferred (24h)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "increase(gaia_network_bytes_transferred_total[24h])"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "unit": "bytes"
        }
      },
      {
        "title": "Throughput (Mbps)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "rate(gaia_network_bytes_transferred_total[5m]) * 8 / 1000 / 1000"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "unit": "Mbps"
        }
      },
      {
        "title": "Active Connections Trend (24h)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "gaia_network_active_connections",
            "legendFormat": "Active Connections"
          }
        ],
        "options": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      {
        "title": "DNS Cache Performance (24h)",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(gaia_network_dns_cache_hits_total[5m])",
            "legendFormat": "Cache Hits/sec"
          },
          {
            "expr": "rate(gaia_network_dns_cache_misses_total[5m])",
            "legendFormat": "Cache Misses/sec"
          }
        ]
      },
      {
        "title": "Network Throughput Trend (24h)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(gaia_network_bytes_transferred_total[5m]) * 8 / 1000 / 1000",
            "legendFormat": "Throughput (Mbps)"
          }
        ]
      },
      {
        "title": "Cumulative Data Transferred (24h)",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "increase(gaia_network_bytes_transferred_total[24h]) / 1024 / 1024 / 1024",
            "legendFormat": "Data (GB)"
          }
        ]
      },
      {
        "title": "Total DNS Cache Hits (24h)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 24, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "increase(gaia_network_dns_cache_hits_total[24h])"
          }
        ]
      },
      {
        "title": "Total DNS Cache Misses (24h)",
        "type": "stat",
        "gridPos": {"x": 8, "y": 24, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "increase(gaia_network_dns_cache_misses_total[24h])"
          }
        ]
      },
      {
        "title": "Total Data Transferred (24h)",
        "type": "stat",
        "gridPos": {"x": 16, "y": 24, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "increase(gaia_network_bytes_transferred_total[24h]) / 1024 / 1024"
          }
        ],
        "options": {
          "unit": "MB"
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 37,
    "style": "dark",
    "time": {
      "from": "now-24h",
      "to": "now"
    }
  },
  "overwrite": true
}
