{
  "dashboard": {
    "title": "API Client Pool Details",
    "description": "Deep dive into API Client Pool performance and diagnostics",
    "tags": ["gaia", "api", "subsystem"],
    "timezone": "browser",
    "panels": [
      {
        "title": "API Success Rate",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "(gaia_api_success_total / gaia_api_requests_total) * 100"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "gauge",
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 95},
              {"color": "green", "value": 99}
            ]
          }
        }
      },
      {
        "title": "API Error Rate",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "(gaia_api_errors_total / gaia_api_requests_total) * 100"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "gauge",
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      {
        "title": "API P95 Latency (ms)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, gaia_api_latency_ms)"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "gauge",
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      {
        "title": "Active API Clients",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "gaia_api_active_clients"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "gauge",
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 300},
              {"color": "red", "value": 450}
            ]
          }
        }
      },
      {
        "title": "Total Requests (24h)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "rate(gaia_api_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ]
      },
      {
        "title": "Successful vs Failed (24h)",
        "type": "timeseries",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "rate(gaia_api_success_total[5m])",
            "legendFormat": "Success/sec"
          },
          {
            "expr": "rate(gaia_api_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ]
      },
      {
        "title": "Rate Limit Events (24h)",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "rate(gaia_api_rate_limited_total[5m])",
            "legendFormat": "Rate Limited/sec"
          }
        ]
      },
      {
        "title": "Latency Distribution (24h)",
        "type": "timeseries",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, gaia_api_latency_ms)",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, gaia_api_latency_ms)",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, gaia_api_latency_ms)",
            "legendFormat": "P99"
          }
        ]
      },
      {
        "title": "Client Pool Utilization (24h)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "gaia_api_active_clients / 500 * 100",
            "legendFormat": "Pool Utilization %"
          }
        ],
        "options": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      {
        "title": "API Alert Status",
        "type": "table",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "count(ALERTS{alertname=~'API.*'})"
          }
        ]
      },
      {
        "title": "Request Volume Heatmap",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "rate(gaia_api_requests_total[1m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "options": {
          "legend": {
            "showLegend": false
          }
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 37,
    "style": "dark",
    "time": {
      "from": "now-24h",
      "to": "now"
    }
  },
  "overwrite": true
}
